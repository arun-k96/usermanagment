<div class="d-flex m-2">
    <h1 class="col-3">Templates</h1>
    <span class="col-9  d-flex justify-content-end">
        <a href="/admin/" type="button" class="btn btn-primary p-2 d-flex align-items-center">Add Template</a>
    </span>

</div>
{{#if alert}}
<div class="alert alert-{{alertcolor}} alert-dismissible fade show" role="alert">
    {{alert}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<table class="table border rounded text-basetext">
    <thead class="bg-secondary bg-opacity-25 fs-8 fw-light">
        <tr>
            <th scope="col">NAME</th>
            <th scope="col">NO. ASSIGNED</th>
            <th scope="col">ACTIONS</th>
        </tr>
    </thead>
    <tbody>
        {{#each templateRow}}
        <tr>
            <td class="col align-left p-3">
                <div class="d-flex flex-row align-items-center">
                    <div style="display:flex;flex-direction:column;justify-content: space-around;align-items: left;">
                        <div class="d-block fs-6">{{this.template}}</div>
                        {{!-- <div class="d-block fs-7">{{this.email}}</div> --}}
                    </div>
                </div>
            </td>
            <td class="col align-left p-3">
                <div class="d-flex flex-row align-items-center">3</div>
            </td>
            <td class="col align-left p-3">
                <div class="d-flex align-items-center ">
                    <a type="button" href="/admin/" class="btn btn-outline-secondary border border-opacity-50 mx-2 fw-semibold">View</a>
                    <a type="button" href="/admin/" class="btn btn-outline-secondary border border-opacity-50 mx-2 fw-semibold">Update</a>
                    <a type="button" class="deleteuser btn btn-outline-secondary border border-opacity-50 mx-2 fw-semibold" data-bs-toggle="modal" data-id="{{this.id}}" data-bs-target="#deleteusermodel">Delete</a>
                </div>

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>